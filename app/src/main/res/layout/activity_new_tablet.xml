<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ef"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vang">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_orange_light"
        app:itemBackground="@android:color/holo_orange_light"
        app:itemIconTint="@color/colorItemAccount"
        app:itemTextColor="@color/colorItemAccount"
        app:menu="@menu/bottom_news" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="389dp"
        android:layout_height="201dp"
        app:srcCompat="@drawable/banner" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="30dp"
        android:text="Tiêu đề" />

    <EditText
        android:id="@+id/etTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="30dp"
        android:text="Dòng máy"/>

    <EditText
        android:id="@+id/etModel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTitle2"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="30dp"
        android:text="Tình trạng"/>

    <EditText
        android:id="@+id/etStatus2"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="19dp"
        android:layout_below="@+id/etModel2"
        android:layout_toRightOf="@+id/textView4"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="30dp"
        android:text="Màu sắc" />

    <EditText
        android:id="@+id/etColor2"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/etStatus2"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/textView2"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="30dp"
        android:text="Bộ nhớ" />

    <EditText
        android:id="@+id/etMemory2"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/etColor2"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/textView2"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="38dp"
        android:layout_height="23dp"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="30dp"
        android:text="Mô tả" />

    <EditText
        android:id="@+id/etDescription2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/etMemory2"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/textView2"
        />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="139dp"
        android:layout_height="92dp"
        android:layout_below="@+id/textView9"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="19dp"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="36dp"
        android:layout_height="18dp"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="30dp"
        android:text="Giá"/>

    <EditText
        android:id="@+id/etPrice2"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/etDescription2"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/textView2"/>
</RelativeLayout>