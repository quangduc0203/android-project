<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vang"
    tools:context=".ui.MyLaptopDetail">

    <Button
        android:id="@+id/btnUpdateTablet"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtMemoryTablet2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"
        android:onClick="onUpdate"
        android:text="update" />

    <ImageView
        android:id="@+id/viewTablet2"
        android:layout_width="263dp"
        android:layout_height="215dp"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteY="4dp" />


    <EditText
        android:id="@+id/txtTilteTablet2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/viewTablet2"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="355dp" />


    <EditText
        android:id="@+id/txtPriceTablet2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/txtTilteTablet2"
        android:textColor="@color/design_default_color_error"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtDescriptionTablet2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/txtPriceTablet2" />

    <EditText
        android:id="@+id/txtModelTablet2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDescriptionTablet2"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/txtStatusTablet2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtModelTablet2"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="13dp"/>

    <EditText
        android:id="@+id/txtColorTablet2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtStatusTablet2"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="13dp" />

    <EditText
        android:id="@+id/txtMemoryTablet2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtColorTablet2"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnDeleteTablet"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtMemoryTablet2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:onClick="onDelete"
        android:text="delete" />

    <TextView
        android:id="@+id/txtTabletID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:visibility="invisible"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDescriptionTablet2"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:text="Model" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:text="Status" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView10"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:text="Color" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView11"
        android:layout_marginTop="40dp"
        android:text="Memory" />
</RelativeLayout>