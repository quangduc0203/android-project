<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vang"
    tools:context=".fragment.FragmentNews">

    <!-- TODO: Update blank fragment layout -->
    <include layout="@layout/toolbar_add" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="381dp"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnPhone"
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_login"
            android:paddingLeft="26dp"
            android:text="Đăng tin điện thoại"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/btnLaptop"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_login"
            android:paddingLeft="26dp"
            android:text="Đăng tin laptop"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/btnWatch"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_login"
            android:paddingLeft="26dp"
            android:text="Đăng tin đồng hồ thông minh"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/btnTablet"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_login"
            android:paddingLeft="26dp"
            android:text="Đăng tin máy tính bảng"
            android:textAllCaps="true" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/banner" />


</FrameLayout>